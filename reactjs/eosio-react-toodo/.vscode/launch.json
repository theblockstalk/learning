    "version": "0.2.0",
    "configurations": [
        {
            "name": "Firefox debugging",
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceFolder}/client/src",
            "pathMappings": [{
                "url": "webpack:///client/src/",
                "path": "${webRoot}/"
            }]
        }
    ]
}